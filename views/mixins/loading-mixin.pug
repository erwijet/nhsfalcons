mixin loadable(id)
    .is-loadable(id=id)
        .loading-page.is-hidden
            .container
                center(style='margin: 10% auto')
                    .loadingio-spinner-interwind-vy62zhor6z
                        .ldio-p29e5fko7l
                            div
                                div
                                    div
                                        div
                                div
                                    div
                                        div
        .loading-content
            if (block)
                block
        script.
            // use jquery
            function setLoading(id, state) {
                let parent = $(`#${id}`);
                let loadingIcon = $(parent).find('.loading-page');
                let content = $(parent).find('.loading-content');

                if (state) {
                    loadingIcon.removeClass('is-hidden');
                    content.addClass('is-hidden');
                } else {
                    loadingIcon.addClass('is-hidden');
                    content.removeClass('is-hidden');
                }   
            }